                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/skills"
                android:gravity="center"
                android:textSize="12sp"/>

            <Spinner
                android:id="@+id/s2mc1e3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:gravity="center"/>

        </LinearLayout>

    </LinearLayout>


